@model IEnumerable<TestWebProject.Models.Entities.Order>

@{
    ViewData["Title"] = "Index";
}

<h1>Все заказы</h1>

<p>
    <a href="@Url.Action("Edit")" class="btn btn-primary">Новый заказ</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SenderСity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SenderAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RecipientСity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddressRecipient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CargoWeight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfReceiving)
            </th>
        </tr>
    </thead>
    <tbody>
 @foreach (var item in Model){
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SenderСity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SenderAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RecipientСity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddressRecipient)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CargoWeight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfReceiving)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.OrderID">Изменить</a>
            </td>
            <td>
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.OrderID">Удалить</a>
            </td>
        </tr>
 }
    </tbody>
</table>